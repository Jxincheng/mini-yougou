/**index.wxss**/
view {
  /* 使用主题颜色的变量 */
  color: var(--themeColor);
}
.index_content {
  height: calc(100vh - 90rpx);
}
/* 轮播图 */
.index_swiper swiper {
  height: 340rpx;
}
.index_swiper image {
  width: 100%;
}
/* 分类导航 */
.index_cate {
  display: flex;
}
.index_cate navigator {
  padding: 20rpx;
  flex: 1;
}
.index_cate navigator image {
  width: 100%;
}
/* 楼层 */
.index_floor .floor_group .floor_title {
  padding: 10rpx 0 0 0;
}
.index_floor .floor_group .floor_title image {
  width: 100%;
}
.index_floor .floor_group .floor_content {
  overflow: hidden;
  padding: 5rpx;
}
.index_floor .floor_group .floor_content navigator {
  float: left;
  width: calc(100% / 3);
}
.index_floor .floor_group .floor_content navigator:nth-last-child(-n+4) {
  height: calc(100vw * 386 / 3 / 232 / 2);
  border-left: 10rpx solid #fff;
}
.index_floor .floor_group .floor_content navigator:nth-child(2),navigator:nth-child(3) {
  border-bottom: 10rpx solid #fff;
}
.index_floor .floor_group .floor_content navigator image {
  width: 100%;
  height: 100%;
}