/* pages/user/index.wxss */
page {
    background: #edece8;
}
.yg_user {
    /* width: 100%;
    height: 100%; */
}
.user_info_wrap {
    height: 45vh;
    overflow: hidden;
    background: var(--themeColor);
    position: relative;
}
.user_info_wrap .user_img_wrap {
    position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
    height: 50vh;
    /* 高斯模糊 */
    filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 20%;
    text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
    margin-top: 40rpx;
    color: #fff;
}
.user_info_wrap .user_btn {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 40%;
    padding: 30rpx;
    border: 1rpx solid greenyellow;
    border-radius: 10rpx;
    color: greenyellow;
    font-size: 38rpx;
}
.user_content {
    position: relative;
}
.user_content .user_main {
    position: absolute;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    top: -40rpx;
    color: #666;
}
.user_content .user_main .history_wrap {
    background: #fff;
    display: flex;
}
.user_content .user_main .history_wrap navigator {
    flex: 1;
    text-align: center;
    padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator .his_num {
    color: var(--themeColor);
}
.user_content .user_main .history_wrap navigator .his_name {

}
.user_content .user_main .orders_wrap {
    background: #fff;
    margin-top: 30rpx;
}
.user_content .user_main .orders_wrap .orders_title {
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .orders_wrap .order_content {
    display: flex;
}
.user_content .user_main .orders_wrap .order_content navigator {
    flex: 1;
    padding: 15rpx 0;
    text-align: center;
}
.user_content .user_main .orders_wrap .order_content navigator .iconfont {
    color: var(--themeColor);
    font-size: 40rpx;
}
.user_content .user_main .orders_wrap .order_content navigator .order_name {

}
.address_wrap {
    margin-top: 30rpx;
    background: #fff;
    padding: 20rpx;
}
.app_info_wrap {
    margin-top: 30rpx;
    background: #fff;
}
.app_info_wrap .app_info_item {
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}
.app_info_wrap .app_info_contact {
    display: flex;
    justify-content: space-between;
    
}
.recommend_wrap {
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    background: #fff;
    padding: 20rpx;
}