/* pages/search/index.wxss */
page {
    background-color: #dedede;
    padding: 20rpx;
}
.search_row {
    height: 60rpx;
    display: flex;
}
.search_row input {
    flex: 1;
    height: 100%;
    background-color: #fff;
    padding-left: 10rpx;
}
.search_row button {
    width: 110rpx;
    height: 100%;
    font-size: 28rpx;
    padding: 0;
    margin-left: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
    font-weight: 500;
}
.search_content {
    margin-top: 20rpx;
}
.search_content .search_item {
    background-color: #fff;
    font-size: 26rpx;
    padding: 15rpx 10rpx;
    border-bottom: 1rpx solid #ccc;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
