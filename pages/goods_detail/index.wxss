/* pages/goods_detail/index.wxss */
.detail_swiper swiper {
    height: 65vw;
    text-align: center;
}
.detail_swiper swiper image {
    width: 60%;
}
.goods_price {
    padding: 15rpx;
    color: var(--themeColor);
    font-size: 32rpx;
    font-weight: 600;
}
.goods_name_row {
    display: flex;
    border-top: 5rpx solid #dedede;
    border-bottom: 5rpx solid #dedede;
    padding: 10rpx 0;
}
.goods_name_row .goods_name {
    flex: 5;
    padding: 0 10rpx;
    color: #000;
    font-size: 30rpx;

    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-left: 1rpx solid #000;
}
.goods_name_row .goods_collect .icon-shoucang1 {
    color: orangered;
}
.goods_info {
    padding-bottom: 90rpx;
}
.goods_info .goods_info_title {
    padding: 20rpx;
    color: var(--themeColor);
    font-size: 32rpx;
    font-weight: 600;
}
.btm_bool {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    border-top: 1rpx solid #ccc;
    background: #fff;
    display: flex;
}
.btm_bool .bool_item {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    position: relative;
}
.btm_bool .bool_item button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}
.btm_bool .btn_cart {
    flex: 2;
    background: #ffa500;
    color: #fff;
    font-size: 30rpx;
    font-weight: 600;
}
.btm_bool .btn_buy {
    flex: 2;
    background: #eb4450;
    color: #fff;
    font-size: 30rpx;
    font-weight: 600;
}